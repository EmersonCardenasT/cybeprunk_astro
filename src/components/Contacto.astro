<script>
  (function () {
    /* ‚îÄ‚îÄ REVEAL ‚îÄ‚îÄ */
    const obs = new IntersectionObserver(
      (entries) =>
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add("visible");
            obs.unobserve(e.target);
          }
        }),
      { threshold: 0.08, rootMargin: "0px 0px -40px 0px" },
    );
    document.querySelectorAll("[data-reveal]").forEach((el) => obs.observe(el));

    /* ‚îÄ‚îÄ CHAR COUNTER ‚îÄ‚îÄ */
    const textarea = document.getElementById(
      "ct-mensaje",
    ) as HTMLTextAreaElement | null;
    const charCount = document.getElementById("ctCharCount");
    const MAX_CHARS = 500;
    textarea?.addEventListener("input", () => {
      const len = textarea.value.length;
      if (textarea.value.length > MAX_CHARS) {
        textarea.value = textarea.value.slice(0, MAX_CHARS);
      }
      if (charCount) {
        charCount.textContent = `${Math.min(len, MAX_CHARS)} / ${MAX_CHARS}`;
        charCount.style.color = len >= MAX_CHARS * 0.9 ? "var(--olive-lt)" : "";
      }
    });

    /* ‚îÄ‚îÄ FORM SUBMIT (mock) ‚îÄ‚îÄ */
    const form = document.getElementById("ctForm") as HTMLFormElement | null;
    const submit = document.getElementById(
      "ctSubmit",
    ) as HTMLButtonElement | null;
    const feedback = document.getElementById("ctFeedback");

    function showFeedback(type: "success" | "error-msg", msg: string) {
      if (!feedback) return;
      feedback.className = `ct-feedback ${type}`;
      feedback.textContent = msg;
      feedback.scrollIntoView({ behavior: "smooth", block: "nearest" });
    }

    form?.addEventListener("submit", async (e) => {
      e.preventDefault();

      // Basic validation
      const nombre = (
        form.querySelector("#ct-nombre") as HTMLInputElement
      ).value.trim();
      const email = (
        form.querySelector("#ct-email") as HTMLInputElement
      ).value.trim();
      const mensaje = (
        form.querySelector("#ct-mensaje") as HTMLTextAreaElement
      ).value.trim();
      const privacy = (
        form.querySelector('[name="privacy"]') as HTMLInputElement
      ).checked;

      if (!nombre || !email || !mensaje) {
        showFeedback(
          "error-msg",
          "Por favor complet√° los campos obligatorios.",
        );
        return;
      }
      if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        showFeedback("error-msg", "El email ingresado no es v√°lido.");
        return;
      }
      if (!privacy) {
        showFeedback(
          "error-msg",
          "Deb√©s aceptar la pol√≠tica de privacidad para continuar.",
        );
        return;
      }

      // Loading state
      submit?.classList.add("loading");
      if (submit) submit.disabled = true;
      if (feedback) {
        feedback.className = "ct-feedback";
        feedback.textContent = "";
      }

      // Simulate async send (replace with real fetch)
      await new Promise((r) => setTimeout(r, 1800));

      submit?.classList.remove("loading");
      if (submit) submit.disabled = false;

      // Success
      showFeedback(
        "success",
        "¬°Mensaje enviado! Te responderemos en menos de 2 horas. üëã",
      );
      form.reset();
      if (charCount) charCount.textContent = `0 / ${MAX_CHARS}`;
    });
  })();
</script>
