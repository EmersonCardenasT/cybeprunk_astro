              title="Mapa de ubicaci√≥n CellTech"></iframe>
          </div>
        </div>
      </div>
      <!-- /ct-info-col -->
    </div>
    <!-- /ct-body -->
  </div>
</section>

<style>
  /* ‚îÄ‚îÄ PALETTE ‚îÄ‚îÄ */
  :root {
    --steel: #4a6278;
    --steel-lt: #7a98ae;
    --olive: #6b7c55;
    --olive-lt: #8fa070;
    --white: #f4f3ef;
    --black: #0a0a0a;
  }

  /* Light */
  .ct-section {
    --bg: #f4f3ef;
    --bg-card: #ffffff;
    --text: #0a0a0a;
    --muted: rgba(10, 10, 10, 0.42);
    --border: rgba(10, 10, 10, 0.08);
    --input-bg: #ffffff;
    background: var(--bg);
    color: var(--text);
    transition:
      background 0.4s,
      color 0.4s;
  }
  /* Dark */
  :root.dark .ct-section {
    --bg: #0c0c0c;
    --bg-card: #111111;
    --text: #f4f3ef;
    --muted: rgba(244, 243, 239, 0.38);
    --border: rgba(244, 243, 239, 0.07);
    --input-bg: #161616;
  }

  /* ‚îÄ‚îÄ SECTION ‚îÄ‚îÄ */
  .ct-section {
    position: relative;
    padding: 120px 0 100px;
    font-family: "DM Sans", "Helvetica Neue", sans-serif;
    overflow: hidden;
  }

  /* ‚îÄ‚îÄ BG ‚îÄ‚îÄ */
  .ct-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  .ct-grain {
    position: absolute;
    inset: 0;
    opacity: 0.025;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='g'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.75' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23g)'/%3E%3C/svg%3E");
    background-size: 256px;
  }
  .ct-line {
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--border);
  }
  .ct-line-top {
    top: 0;
  }
  .ct-line-bottom {
    bottom: 0;
  }

  /* ‚îÄ‚îÄ INNER ‚îÄ‚îÄ */
  .ct-inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 44px;
    display: flex;
    flex-direction: column;
    gap: 56px;
    position: relative;
    z-index: 1;
  }
  @media (max-width: 640px) {
    .ct-inner {
      padding: 0 20px;
      gap: 40px;
    }
  }

  /* ‚îÄ‚îÄ HEADER ‚îÄ‚îÄ */
  .ct-header {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .ct-eyebrow {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.65rem;
    letter-spacing: 0.26em;
    text-transform: uppercase;
    color: var(--steel-lt);
    margin: 0;
  }
  .eyebrow-pip {
    width: 7px;
    height: 7px;
    background: var(--olive-lt);
    border-radius: 50%;
    box-shadow: 0 0 8px var(--olive);
    flex-shrink: 0;
  }
  .ct-header-row {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 40px;
    flex-wrap: wrap;
  }
  .ct-title {
    font-family: "DM Serif Display", Georgia, serif;
    font-size: clamp(2.4rem, 5vw, 4rem);
    font-weight: 400;
    line-height: 0.93;
    letter-spacing: -0.035em;
    color: var(--text);
    margin: 0;
  }
  .title-outline {
    color: transparent;
    -webkit-text-stroke: 1px rgba(10, 10, 10, 0.35);
  }
  :root.dark .title-outline {
    -webkit-text-stroke: 1px rgba(244, 243, 239, 0.28);
  }
  .ct-sub {
    font-size: 0.88rem;
    color: var(--muted);
    line-height: 1.75;
    margin: 0;
    font-weight: 300;
    max-width: 380px;
    flex-shrink: 0;
  }

  /* ‚ïê‚ïê BODY ‚ïê‚ïê */
  .ct-body {
    display: grid;
    grid-template-columns: 1.1fr 1fr;
    gap: 60px;
    align-items: start;
  }
  @media (max-width: 960px) {
    .ct-body {
      grid-template-columns: 1fr;
      gap: 48px;
    }
  }

  /* ‚ïê‚ïê FORM ‚ïê‚ïê */
  .ct-form {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Row */
  .ct-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }
  @media (max-width: 500px) {
    .ct-row {
      grid-template-columns: 1fr;
    }
  }

  /* Field */
  .ct-field {
    display: flex;
    flex-direction: column;
    gap: 8px;
    position: relative;
  }

  .ct-label {
    font-size: 0.62rem;
    font-weight: 500;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--muted);
    display: flex;
    align-items: center;
    gap: 6px;
  }
  .ct-optional {
    font-size: 0.55rem;
    text-transform: none;
    letter-spacing: 0.06em;
    color: var(--muted);
    opacity: 0.6;
    font-weight: 300;
  }

  .ct-input {
    width: 100%;
    padding: 13px 16px;
    background: var(--input-bg);
    border: 1px solid var(--border);
    color: var(--text);
    font-size: 0.82rem;
    font-family: "DM Sans", sans-serif;
    font-weight: 300;
    outline: none;
    transition:
      border-color 0.25s,
      box-shadow 0.25s;
    -webkit-appearance: none;
    border-radius: 0;
    box-sizing: border-box;
  }
  .ct-input::placeholder {
    color: var(--muted);
    opacity: 0.6;
  }
  .ct-input:focus {
    border-color: var(--steel);
    box-shadow: 0 0 0 3px rgba(74, 98, 120, 0.08);
  }
  .ct-input.error {
    border-color: #c0392b;
  }

  /* Bottom line effect on focus */
  .ct-field-line {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 1px;
    width: 100%;
    background: linear-gradient(to right, var(--olive), var(--steel));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }
  .ct-input:focus ~ .ct-field-line {
    transform: scaleX(1);
  }

  /* Textarea */
  .ct-textarea {
    resize: vertical;
    min-height: 120px;
    max-height: 300px;
    line-height: 1.65;
  }
  .ct-char-count {
    font-size: 0.58rem;
    letter-spacing: 0.1em;
    color: var(--muted);
    opacity: 0.5;
    align-self: flex-end;
    margin-top: -4px;
  }

  /* Motivo radios */
  .ct-motivo-group {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  .ct-motivo-opt {
    display: flex;
    cursor: pointer;
  }
  .ct-radio {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }
  .ct-motivo-label {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 14px;
    border: 1px solid var(--border);
    font-size: 0.68rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--muted);
    transition:
      border-color 0.25s,
      color 0.25s,
      background 0.25s;
    user-select: none;
  }
  .ct-motivo-label svg {
    opacity: 0.6;
    flex-shrink: 0;
  }
  .ct-radio:checked + .ct-motivo-label {
