<style>
  /* ── PALETTE ── */
  :root {
    --steel: #4a6278;
    --steel-lt: #7a98ae;
    --olive: #6b7c55;
    --olive-lt: #8fa070;
    --white: #f4f3ef;
    --black: #0a0a0a;
  }

  /* Light */
  .ob-section {
    --bg: #f4f3ef;
    --bg-card: #ffffff;
    --text: #0a0a0a;
    --muted: rgba(10, 10, 10, 0.4);
    --border: rgba(10, 10, 10, 0.08);
    background: var(--bg);
    color: var(--text);
    transition:
      background 0.4s,
      color 0.4s;
  }
  /* Dark */
  :root.dark .ob-section {
    --bg: #0c0c0c;
    --bg-card: #111111;
    --text: #f4f3ef;
    --muted: rgba(244, 243, 239, 0.38);
    --border: rgba(244, 243, 239, 0.07);
  }

  /* ── SECTION ── */
  .ob-section {
    position: relative;
    padding: 120px 0 100px;
    font-family: "DM Sans", "Helvetica Neue", sans-serif;
    overflow: hidden;
  }

  /* ── BG ── */
  .ob-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  .ob-grain {
    position: absolute;
    inset: 0;
    opacity: 0.025;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='g'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.75' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23g)'/%3E%3C/svg%3E");
    background-size: 256px;
  }
  .ob-line {
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--border);
  }
  .ob-line-top {
    top: 0;
  }
  .ob-line-bottom {
    bottom: 0;
  }

  /* Watermark */
  .ob-watermark {
    position: absolute;
    bottom: -10px;
    right: -20px;
    font-family: "DM Serif Display", serif;
    font-size: clamp(5rem, 12vw, 10rem);
    font-weight: 400;
    color: transparent;
    -webkit-text-stroke: 1px var(--border);
    letter-spacing: -0.02em;
    user-select: none;
    white-space: nowrap;
    opacity: 0.8;
    line-height: 1;
  }

  /* ── INNER ── */
  .ob-inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 44px;
    display: flex;
    flex-direction: column;
    gap: 48px;
    position: relative;
    z-index: 1;
  }
  @media (max-width: 640px) {
    .ob-inner {
      padding: 0 20px;
      gap: 36px;
    }
  }

  /* ── HEADER ── */
  .ob-header {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .ob-eyebrow {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.65rem;
    letter-spacing: 0.26em;
    text-transform: uppercase;
    color: var(--steel-lt);
    margin: 0;
  }
  .eyebrow-pip {
    width: 7px;
    height: 7px;
    background: var(--olive-lt);
    border-radius: 50%;
    box-shadow: 0 0 8px var(--olive);
    flex-shrink: 0;
  }
  .ob-header-row {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 40px;
    flex-wrap: wrap;
  }
  .ob-title {
    font-family: "DM Serif Display", Georgia, serif;
    font-size: clamp(2.4rem, 5vw, 4rem);
    font-weight: 400;
    line-height: 0.93;
    letter-spacing: -0.035em;
    color: var(--text);
    margin: 0;
  }
  .title-outline {
    color: transparent;
    -webkit-text-stroke: 1px rgba(10, 10, 10, 0.35);
  }
  :root.dark .title-outline {
    -webkit-text-stroke: 1px rgba(244, 243, 239, 0.28);
  }
  .ob-sub {
    font-size: 0.88rem;
    color: var(--muted);
    line-height: 1.75;
    margin: 0;
    font-weight: 300;
    max-width: 360px;
    flex-shrink: 0;
  }

  /* ── BODY LAYOUT ── */
  .ob-body {
    display: grid;
    grid-template-columns: 380px 1fr;
    gap: 1px;
    border: 1px solid var(--border);
    background: var(--border);
    min-height: 560px;
  }
  @media (max-width: 1000px) {
    .ob-body {
      grid-template-columns: 1fr;
    }
  }

  /* ── FEATURED IMAGE ── */
  .ob-featured {
    background: var(--bg-card);
  }
  .ob-featured-img-wrap {
    position: relative;
    height: 100%;
    min-height: 500px;
    overflow: hidden;
  }
  .ob-featured-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    transition: transform 8s ease-out;
  }
  .ob-featured:hover .ob-featured-img {
    transform: scale(1.04);
  }

  /* Dark overlay */
  .ob-featured-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(8, 8, 8, 0.88) 0%,
      rgba(8, 8, 8, 0.3) 50%,
      rgba(8, 8, 8, 0.1) 100%
    );
  }

  /* Floating info card pinned to bottom */
  .ob-float-card {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 28px 28px 32px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .ob-float-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }
  .ob-float-badge {
    font-size: 0.58rem;
    font-weight: 700;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    padding: 4px 12px;
    border: 1px solid rgba(244, 243, 239, 0.3);
    color: rgba(244, 243, 239, 0.8);
    background: rgba(244, 243, 239, 0.06);
    backdrop-filter: blur(6px);
  }
  .ob-float-save {
    font-family: "DM Serif Display", serif;
    font-size: 1.1rem;
    color: var(--olive-lt);
    letter-spacing: -0.02em;
    font-weight: 400;
  }
  .ob-float-desc {
    font-size: 0.78rem;
    color: rgba(244, 243, 239, 0.55);
    line-height: 1.65;
    margin: 0;
    font-weight: 300;
  }
  .ob-float-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }
  .ob-pill {
    font-size: 0.58rem;
    letter-spacing: 0.1em;
    color: rgba(244, 243, 239, 0.65);
    border: 1px solid rgba(244, 243, 239, 0.15);
    padding: 4px 10px;
    background: rgba(244, 243, 239, 0.05);
    backdrop-filter: blur(4px);
  }

